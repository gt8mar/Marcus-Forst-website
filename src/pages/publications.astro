<style>
  .pub-section {
    margin-bottom: 3rem;
  }
  .pub-section h2 {
    font-size: 1.5rem;
    color: var(--heading);
    border-bottom: 2px solid var(--lightBorder);
    padding-bottom: 0.5rem;
    margin-bottom: 1.25rem;
  }
  .pub-list,
  .talk-list {
    padding-left: 1.5rem;
  }
  .pub-list li,
  .talk-list li {
    margin-bottom: 1.25rem;
    line-height: 1.6;
    font-size: 0.95rem;
  }
  .talk-list {
    list-style: none;
    padding-left: 0;
  }
  .talk-list li {
    padding-left: 1rem;
    border-left: 3px solid var(--lightBorder);
  }
  .profile-links {
    margin-top: 0.5rem !important;
    font-size: 0.95rem !important;
  }
  .doi-link {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--light);
    padding: 0.15rem 0.5rem;
    border-radius: 3px;
    margin-left: 0.25rem;
    text-decoration: none !important;
  }
  .doi-link:hover {
    background: var(--highlight);
    color: var(--neutral-dark-900) !important;
  }
</style>
