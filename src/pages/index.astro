---
import Layout from '../components/layout.astro';
import Hero from '../components/hero.astro';
import ProjectCard from '../components/project-card.astro';
---

<Layout
  title="Marcus Forst"
  description="Applied physicist and founder of Forst Laboratories LLC. Building instruments and software for biomedical research."
  currentPath="/"
>
  <Hero
    heading="Marcus Forst"
    subtitle="Applied Physicist | Founder, Forst Laboratories LLC"
    bio="I build instruments and write software to solve problems in biomedical research. Stanford PhD in Applied Physics, Knight-Hennessy Scholar, NSF Graduate Research Fellow."
    ctaText="View Research"
    ctaHref="/research"
  />

  <section class="projects-section">
    <div class="projects-inner">
      <h2>Current Projects</h2>
      <div class="projects-grid">
        <ProjectCard
          title="Capillary Microscope"
          description="Designing a microscope to image white blood cells in nailfold capillaries. Invented an inflatable finger-holder to stabilize videos and modulate blood flow."
          collaborators="Eleftheria Foundation, Dr. Stephen Quake"
          href="/research/capillary-microscope"
        />
        <ProjectCard
          title="Lung Mural Cells"
          description="Python tools to study how pericytes and smooth muscle cells change in the developing and hyperoxic lung."
          collaborators="Stanford University, MD David Cornfield"
          href="/research/lung-mural-cells"
        />
        <ProjectCard
          title="Uterine Atony"
          description="Combining proteomics and RNA-seq from 21 patients to identify disrupted pathways in atonic uterine muscle."
          collaborators="Stanford University, MD Jessica Ansari"
          href="/research/uterine-atony"
        />
        <ProjectCard
          title="IVF Outcome Prediction"
          description="Machine learning models to predict pregnancy success from preimplantation genetic testing data across ~8,600 embryo records."
          collaborators="Reproductive Medicine Institute"
          href="/research/ivf-prediction"
        />
      </div>
    </div>
  </section>
</Layout>

<style>
  .projects-section {
    background: var(--light);
    padding: 4rem 1.5rem;
  }
  .projects-inner {
    max-width: 1100px;
    margin: 0 auto;
  }
  .projects-inner h2 {
    text-align: center;
    font-size: 1.8rem;
    margin: 0 0 2rem;
    color: var(--heading);
  }
  .projects-grid {
    display: grid;
    gap: 1.5rem;
    grid-template-columns: 1fr;
  }
  @media (min-width: 600px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (min-width: 1000px) {
    .projects-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
