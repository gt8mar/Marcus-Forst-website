<style>
  .bio p {
    margin-bottom: 1rem;
    line-height: 1.7;
  }
  .education,
  .awards {
    margin-top: 2.5rem;
  }
  .education h2,
  .awards h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--heading);
    border-bottom: 2px solid var(--lightBorder);
    padding-bottom: 0.5rem;
  }
  table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.95rem;
  }
  th, td {
    text-align: left;
    padding: 0.6rem 1rem;
    border-bottom: 1px solid var(--lightBorder);
  }
  th {
    font-weight: 700;
    color: var(--text-muted);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .awards ul {
    list-style: none;
    padding: 0;
  }
  .awards li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--lightBorder);
    font-size: 0.95rem;
  }
  .awards li:last-child {
    border-bottom: none;
  }
  @media (max-width: 600px) {
    table {
      font-size: 0.85rem;
    }
    th, td {
      padding: 0.5rem 0.5rem;
    }
  }
</style>
